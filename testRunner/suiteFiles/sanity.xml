<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AmazonSanitySuite">
<groups>
<run>
<include name="sanity"></include>
</run>
</groups>
<listeners>
<listener class-name="com.amazon.customListeners.MyListener"></listener>
</listeners>
	<test name="Amazon_SignInPageSanityTest">
		<classes>
			<class name="com.amazon.tests.SignInPageTest" />
		</classes>
	</test>
	<test name="Amazon_RegistrationPageSanityTest">
		<classes>
			<class name="com.amazon.tests.RegistrationPageTest" />
		</classes>
	</test>
</suite> <!-- Suite -->
